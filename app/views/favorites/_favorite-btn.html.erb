<% if book.favorites_by?(current_user) %>
  <td>
    <%= link_to book_favorites_path(book), method: :delete do %>
    <i class="fas fa-heart" style="color: red;">︎<%= book.favorites.count %></i>
    <% end %>
  </td>
  <% else %>
  <td>
    <%= link_to book_favorites_path(book), method: :post do %>
      <i class="far fa-heart" style="color: blue;">︎<%= book.favorites.count %></i>
    <% end %>
  </td>
<% end %>