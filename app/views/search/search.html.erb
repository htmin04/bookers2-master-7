<div class="container">
    <div class="col-xs-12">
        <% if @model == "user" %>
        <h2>Users search for '<%= @content %>'</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>image</th>
                    <th>name</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
        <% @datas.each do |user| %>
          <tbody>
              <tr>
                  <td>
                      <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                  </td>
                  <td><%= user.name %></td>
                  <td><%= "フォロー数：#{user.follower.count}" %></td>
                  <td><%= "フォロワー数：#{user.followed.count}" %></td>
                  <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
              </tr>
          </tbody>
        </table>
        <% end %>
        <% elsif @model == "book" %>
        <h2>Books search for '<%= @content %>'</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            </thead>
        <% @datas.each do |book| %>
            <tbody>
                <tr>
                    <td>
                        <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
                    </td>
                    <td><%= link_to book.title, book_path(book) %></td>
                    <td><%= book.body %></td>
                </tr>
            </tbody>
        <% end %>
        <% end %>
        </table>
    </div>
</div>